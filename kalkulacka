#include <stdio.h>

int main() {
    int cislo1, cislo2;
    char operace;
    int vysledek;

    printf("Vitej!\n");
    printf("Zadej prvni cislo: ");
    scanf("%d", &cislo1);
    printf("Zadej druhe cislo: ");
    scanf("%d", &cislo2);
    printf("\nJakou operaci chces provest?\n");
    printf("1. Soucet\n");
    printf("2. Rozdil\n");
    printf("3. Soucin\n");
    printf("4. Podil\n");
    printf("Zadej cislo (1-4):");
    scanf(" %c", &operace);

    switch (operace) {
        case '1':
            vysledek = cislo1 + cislo2;
        printf("Vysledek je: %d\n", vysledek);
        break;
        case '2':
            vysledek = cislo1 - cislo2;
        printf("Vysledek je: %d\n", vysledek);
        break;
        case '3':
            vysledek = cislo1 * cislo2;
        printf("Vysledek je: %d\n", vysledek);
        break;
        case '4':
            if (cislo2 != 0) {
                vysledek = cislo1 / cislo2;
                printf("Vysledek je: %d\n", vysledek);
            } else {
                printf("Nemuzes delit nulou.\n");
            }
        break;
        default:
            printf("Chyba: Neplatna operace.\n");
    }
    return 0;
}
